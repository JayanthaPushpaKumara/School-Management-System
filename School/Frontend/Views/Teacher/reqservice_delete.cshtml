
@{
    ViewBag.Title = "reqservice_delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br /><br /><br />

<font color=#0404B4>
    <h2>Delete requirement</h2></font>

    <body background="~/Content/images/47.jpg">

        <script language="javascript" type="text/javascript">

            window.onload = function () {

                document.getElementById('submit').onclick = function () {

                    {
                        var y = "@ViewBag.detailsid";

                        var x = 'http://localhost:56412/api/reqservice/Deletereqservice/' + y;

                        alert(x);

                        $.ajax({
                            url: x,
                            type: 'GET',
                            dataType: "json",
                            contentType: 'application/json; charset=utf-8',

                            success: function (data) {

                                console.log(data);

                                alert(" successfuly deleted");


                            },

                            error: function () {
                                alert("error");

                            }
                        });
                    }
                }
            }

        </script>

        <br /><br /><br />
        <font color=#0404B4>
            <h2>Are you sure you want to delete the requirement</h2></font>
            <br /><br /><br />
            <button type="button" class="btn btn-success" id="submit">Delete</button>
            &nbsp;  &nbsp;  &nbsp;
            <input type="button" class="btn btn-info" value="Cancel" onclick="location.href = 'http://localhost:56448/Teacher/Requirements';" />

</body>
