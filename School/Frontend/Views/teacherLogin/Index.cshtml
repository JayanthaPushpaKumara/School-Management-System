            });

            var y = 'http://localhost:56412/api/Logins';
            var dataJSON = {
                "email": $('#email').val(),
                "password": $('#new_password').val(),
                "type": $('#role').val()
            };
            //  alert('hello!');
            $.ajax({

                url: y,
                type: 'POST',
                data: JSON.stringify(dataJSON),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',

                success: function (data) {

                    console.log(data);
                    alert("sucess");
