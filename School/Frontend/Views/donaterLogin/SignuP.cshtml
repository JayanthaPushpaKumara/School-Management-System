                error: function () {
                    //alert('error');
                    //alert(data);
                }
            });

            var y = 'http://localhost:56412/api/Logins';
            var dataJSON = {
                "email": $('#email').val(),
                "password": $('#new_password').val(),
                "type": $('#role').val()
